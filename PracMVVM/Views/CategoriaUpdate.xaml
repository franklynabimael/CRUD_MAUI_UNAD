<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracMVVM.Views.CategoriaUpdate" 
             Title="CategoriaUpdate">
    <VerticalStackLayout Margin="30,2" VerticalOptions="CenterAndExpand">
        <VerticalStackLayout>
            <Entry Placeholder="Nombre de la Categoria" Text="{Binding Path=Categoria}" Margin="20,1,20,1"/>
            <Button Text="Guardar" Margin="20,10,20,10" BackgroundColor="Green" Command="{Binding UpdateCommand, Mode=TwoWay}"/>
            <Button Text="Volver" Margin="20,10,20,10" BackgroundColor="red" Clicked="Button_Clicked"/>

        </VerticalStackLayout>
           
    </VerticalStackLayout>
</ContentPage>