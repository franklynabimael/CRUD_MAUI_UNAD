<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracMVVM.Views.DetalleFacturaCrear"
             Title="DetalleFacturaCrear">
    <VerticalStackLayout Margin="30,2" VerticalOptions="CenterAndExpand" BindableLayout.ItemsSource="{Binding Factura}">
        <VerticalStackLayout>
           
            <Entry Placeholder="ProductoID" Text="{Binding Path=ProductoID}" Margin="20,1,20,1"/>
            <Entry Placeholder="FacturaID" Text="{Binding Path=FacturaID}" Margin="20,1,20,1"/>
            <Entry Placeholder="Costo" Text="{Binding Path=Costo}" Margin="20,1,20,1"/>
            <Entry Placeholder="Cantidad" Text="{Binding Path=Cantidad}" Margin="20,1,20,1"/>
            <Entry Placeholder="Precio" Text="{Binding Path=Precio}" Margin="20,1,20,1"/>
            <Button Text="Guardar" Margin="20,10,20,10" BackgroundColor="Green" Command="{Binding SaveCommand, Mode=TwoWay}"/>
            <Button Text="Volver" Margin="20,10,20,10" BackgroundColor="red" Clicked="Button_Clicked"/>



        </VerticalStackLayout>


    </VerticalStackLayout>
</ContentPage>